<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_background"
    tools:context=".MainActivity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:background="@drawable/line4">
        <TextView
            android:id="@+id/back_button"
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:text="뒤로가기"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="198dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="건의사항"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold" />
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_1"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:background="@drawable/roof" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/line6"
            />
        <ListView
            android:layout_marginTop="15dp"
            android:layout_marginBottom="17dp"
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="480dp"
            android:descendantFocusability="blocksDescendants" />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginBottom="20dp"
            android:id="@+id/input_gune"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_below="@id/listView"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="건의사항\n올리기"
            android:layout_alignParentBottom="true"
            android:background="@drawable/line6"
            android:textColor="@color/black"
            android:textSize="21dp" />
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_marginBottom="20dp"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:background="@drawable/gune_image"
            android:layout_toLeftOf="@id/input_gune"
            android:layout_alignParentBottom="true"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_marginBottom="20dp"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:background="@drawable/gune_image_2"
            android:layout_toRightOf="@id/input_gune"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
</LinearLayout>